generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Cat {
  id          Int      @id @unique @default(autoincrement())
  name        String
  description String
  age         Int
  sex         String
  weight      Float?
  vaccinated  Boolean?
  sterilized  Boolean?
}

model User {
  id       Int     @id @unique @default(autoincrement())
  name     String
  email    String  @unique
  password String
  role     String?
}

model Article {
  id          Int      @id @unique @default(autoincrement())
  title       String
  description String?
  text        String
  images      String[] // Массив строк для хранения URL картинок
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}
